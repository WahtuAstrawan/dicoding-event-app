<resources>
    <!-- Base application theme. -->
    <style name="Theme.DicodingEvent" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="iconTint">@color/icon_tint_dark</item>

        <!-- Warna utama (dominasi orange) -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna sekunder (untuk variasi warna) -->
        <item name="colorSecondary">@color/orange_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Warna latar belakang untuk dark theme -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/orange_dark</item>

        <!-- Custom text color for dark mode -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>
</resources>