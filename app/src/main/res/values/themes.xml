    <style name="Theme.DicodingEvent" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your light theme here. -->
        <item name="iconTint">@color/icon_tint</item>

        <!-- Warna utama -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Warna sekunder -->
        <item name="colorSecondary">@color/orange_secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Warna latar belakang -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/orange_dark</item>

        <!-- Custom text color -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

</resources>